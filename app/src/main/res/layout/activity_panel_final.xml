<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3333B4FF"
    tools:context=".PanelFinalActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreJugador1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="Daniel"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivJugador1"
                android:layout_width="90dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/personaje4" />

            <TextView
                android:id="@+id/dineroTotalJugador1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#FFFDF6FF"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dineroActualJugador1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#FFFDF6FF"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </LinearLayout>


        <GridLayout
            android:id="@+id/letterPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#0E5394"
            android:columnCount="14"
            android:orientation="horizontal"
            android:padding="16dp"
            android:rowCount="4" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
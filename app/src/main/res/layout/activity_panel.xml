<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3333B4FF"
    tools:context=".PanelActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreJugador1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Daniel"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivJugador1"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/personaje4" />

                <TextView
                    android:id="@+id/dineroTotalJugador1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FFFDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/dineroActualJugador1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FFFDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreJugador2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Daniel"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivJugador2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/personaje10" />

                <TextView
                    android:id="@+id/dineroTotalJugador2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FFFDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/dineroActualJugador2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FFFDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreJugador3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Daniel"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivJugador3"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/personaje9" />

                <TextView
                    android:id="@+id/dineroTotalJugador3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/dineroActualJugador3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="#FFFDF6FF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:id="@+id/letterPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/azul_oscuro"
            android:columnCount="14"
            android:orientation="horizontal"
            android:padding="16dp"
            android:rowCount="4" />

        <TextView
            android:id="@+id/tvPista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="#81BBF4"
            android:padding="3dp"
            android:text="Pista"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nombreJugadorActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFDF6FF"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <FrameLayout android:id="@+id/frameLayout"
             android:layout_height="500dp"
             android:layout_width="match_parent">

        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imagen_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:src="@drawable/imagen_principal" />

        <Button
            android:id="@+id/boton_jugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagen_principal"
            android:layout_marginTop="490dp"
            android:layout_marginBottom="16dp"
            android:text="Jugar" />

        <Button
            android:id="@+id/boton_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:layout_below="@id/boton_jugar"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/boton_reglas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boton_opciones"
            android:layout_marginTop="9dp"
            android:text="Reglas" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ruleta_de_la_fortuna" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>